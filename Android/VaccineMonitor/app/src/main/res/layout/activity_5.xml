<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/im11"
    android:id="@+id/screen3"
    android:onClick="onScreen3Clicked"
    tools:context="com.example.pardeepkaur.vaccinemoniter1.Activity5">

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="Number of faults"
        android:background="@drawable/stroke"
        android:backgroundTintMode="screen"


        android:id="@+id/numberOfFaults"
        android:layout_marginLeft="65dp"
        android:onClick="onConnectFault"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />





    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="Graph"
        android:onClick="onConnectGraph"
        android:background="@drawable/stroke"
        android:backgroundTintMode="screen"
        android:id="@+id/button"

        android:layout_marginLeft="30dp"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/numberOfFaults"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />




</RelativeLayout>
